@page "/history"
@using Imc.Classes
@inject HistoryService HistoryService

<PageTitle>History</PageTitle>

<div class="container">
    <div class="history-container">
        <div class="img-container">
        <div class="img-container2">
            <img src="./icon-no-bg.png" alt="imc" class="img-result">
        </div>
        </div>
        <div class="title-history">
            <h1>History</h1>
        </div>
        <div class="search-history">
            <div class="search-history2">
                <input type="text" placeholder="Procurar" class="search" @oninput="HandleSearch" />
            </div>
        </div>
        <div class="body-history">
            @if(HistoryService.Historico != null && HistoryService.Historico.Any())
            {
                <ul class="list-history">
                    @foreach(var item in HistoryService.Historico.Where(item=> item.Resultado.Contains(searchText)))
                    {
                        <div class="list-history2">
                            @if(item.Resultado[0] == 'P')
                            {
                                <div class="list-history3">
                                    <i>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="green" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/>
                                        </svg>
                                    </i>
                                    <li class="result-history">@item.Resultado</li>
                                </div>
                            }
                            else 
                            {
                                <div class="list-history3">
                                    <i>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="red" class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                            <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                                        </svg>
                                    </i>
                                    <li class="result-history">@item.Resultado</li>
                                </div>
                            }
                            <div class="list-history3">
                                <li class="date-history">@item.Data.ToShortDateString()</li>
                            </div>
                        </div>
                        
                        <hr/>
                    }
                </ul>
                
            }
            else
            {
                <p class="list-error">Nenhum histórico disponível.</p>
                
            }
        </div>
        
    </div>
</div>


@code {
    private string searchText = "";

    private void HandleSearch(ChangeEventArgs e)
    {
        searchText = e.Value.ToString();
    }
}
